@{
    ViewData["Title"] = "View Components Sandbox";
}

<div class="container mt-4">
    <h2>⚙️ View Components Sandbox</h2>
    <p class="text-muted">Experiment with view components (mini-controllers with their own logic)</p>

    <div class="row">
        <div class="col-md-12">
            <h4>Using View Components</h4>
            
            <!-- Example 1: Simple Alert Component -->
            <div class="card mb-3">
                <div class="card-header">
                    Example 1: Alert View Component
                </div>
                <div class="card-body">
                    @await Component.InvokeAsync("Alert", new { message = "This is from a View Component!", type = "primary" })
                    @await Component.InvokeAsync("Alert", new { message = "View components can have their own logic!", type = "success" })
                </div>
            </div>

            <!-- Example 2: Priority List Component -->
            <div class="card mb-3">
                <div class="card-header">
                    Example 2: Priority List Component
                </div>
                <div class="card-body">
                    @await Component.InvokeAsync("PriorityList", new { maxItems = 5 })
                </div>
            </div>
        </div>
    </div>

    <div class="alert alert-info" role="alert">
        <strong>About View Components:</strong> View components are like mini-controllers. They can contain logic, make database calls, and render their own views. Located in <code>ViewComponents/</code> folder.
    </div>

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-link">← Back to Sandbox Home</a>
    </div>
</div>
