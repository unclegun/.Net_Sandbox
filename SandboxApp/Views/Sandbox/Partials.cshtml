@model List<string>

@{
    ViewData["Title"] = "Partials Sandbox";
}

<div class="container mt-4">
    <h2>üß© Partial Views Sandbox</h2>
    <p class="text-muted">Experiment with reusable partial views</p>

    <div class="row">
        <div class="col-md-12">
            <h4>Using Partials</h4>
            
            <!-- Example 1: Basic Partial -->
            <div class="card mb-3">
                <div class="card-header">
                    Example 1: Basic Partial
                </div>
                <div class="card-body">
                    <partial name="_ExamplePartial" />
                </div>
            </div>

            <!-- Example 2: Partial with Model -->
            <div class="card mb-3">
                <div class="card-header">
                    Example 2: Partial with Model (List of Items)
                </div>
                <div class="card-body">
                    <partial name="_ItemListPartial" model="Model" />
                </div>
            </div>

            <!-- Example 3: Alert Partial -->
            <div class="card mb-3">
                <div class="card-header">
                    Example 3: Reusable Alert Partial
                </div>
                <div class="card-body">
                    <partial name="_AlertPartial" model='new { Type = "info", Message = "This is an informational alert partial!" }' />
                    <partial name="_AlertPartial" model='new { Type = "success", Message = "This is a success alert partial!" }' />
                    <partial name="_AlertPartial" model='new { Type = "warning", Message = "This is a warning alert partial!" }' />
                </div>
            </div>
        </div>
    </div>

    <div class="alert alert-info" role="alert">
        <strong>About Partials:</strong> Partial views are located in <code>Views/Shared/</code> or in the same folder as the view. They're great for reusable UI components!
    </div>

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-link">‚Üê Back to Sandbox Home</a>
    </div>
</div>
